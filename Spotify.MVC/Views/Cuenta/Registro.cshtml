<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spotify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1db954, #191414);
            min-height: 100vh;
        }
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
        .card {
            border: none;
            border-radius: 15px;
        }
        .btn-success {
            background: #1db954;
            border-color: #1db954;
        }
        .btn-success:hover {
            background: #1ed760;
            border-color: #1ed760;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fab fa-spotify"></i> Spotify
            </a>
            <div class="navbar-nav ms-auto">
                @if (Context.Session.GetString("UsuarioNombre") != null)
                {
                    <span class="navbar-text me-3">
                        Hola, @Context.Session.GetString("UsuarioNombre")
                    </span>
                    <a class="nav-link" asp-controller="Cuenta" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                    </a>
                }
                else
                {
                    <a class="nav-link" asp-controller="Cuenta" asp-action="Login">
                        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                    </a>
                    <a class="nav-link" asp-controller="Cuenta" asp-action="Registro">
                        <i class="fas fa-user-plus"></i> Registro
                    </a>
                }
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Validación de email en tiempo real
        $('#Email').on('blur', function() {
            const email = $(this).val();
            if (email) {
                $.get('/Cuenta/VerificarEmail', { email: email })
                    .done(function(data) {
                        if (!data) {
                            $('#emailError').show();
                            $('#btnRegistro').prop('disabled', true);
                        } else {
                            $('#emailError').hide();
                            $('#btnRegistro').prop('disabled', false);
                        }
                    });
            }
        });

        // Validar que las contraseñas coincidan
        $('#ConfirmarContraseña').on('keyup', function() {
            const password = $('#Contraseña').val();
            const confirmPassword = $(this).val();

            if (password !== confirmPassword) {
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid').addClass('is-valid');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>